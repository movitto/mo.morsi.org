---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <div class="article">
    <%= partial :article_header,
                :locals => {:article => article} %>

    <%= article.body %>

    <%= partial :article_footer,
                :locals => {:article => article} %>
  </div>
<% end %>

<% if paginate %>
  <div id="page_nav">
  <% if num_pages > 1 %>
    <% if prev_page %>
      <%= link_to "&#9198;", "/" %>
      <%= link_to "&#8884;", prev_page %>

    <!-- placeholders -->
    <% else %>
      <div></div>
      <div></div>
    <% end %>

    [<%= page_number %> / <%= num_pages %>]

    <% if next_page %>
      <%= link_to "&#8885;", next_page %>
      <%= link_to "&#9197;", "/page/#{num_pages}" %>

    <!-- placeholders -->
    <% else %>
      <div></div>
      <div></div>
    <% end %>
  <% end %>
  </div>
<% end %>
