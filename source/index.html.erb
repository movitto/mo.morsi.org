---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <div class="article">
    <%= partial :article_date, :locals => {:article => article} %>
    <%= partial :article_tags, :locals => {:article => article} %>

    <h2><%= link_to article.title, article %></h2>
    <%= article.body %>
  </div>
<% end %>

<!-- TODO section nav: up/down arrows to scroll between posts
          https://www.w3schools.com/jquery/tryit.asp?filename=tryjquery_eff_animate_smoothscroll
 -->

<% if paginate %>
  <div id="page_nav">
  <% if num_pages > 1 %>
    <% if prev_page %>
      <%= link_to "&#9198;", "/" %>
      <%= link_to "&#8884;", prev_page %>
    <% end %>

    [<%= page_number %> / <%= num_pages %>]

    <% if next_page %>
      <%= link_to "&#8885;", next_page %>
      <%= link_to "&#9197;", "/page/#{num_pages}" %>
    <% end %>
  <% end %>
  </div>
<% end %>
